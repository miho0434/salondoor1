
<div class ="registration-main">
  <div class = "form-wrap">
    <div class ="form-header">
      <h4 class =form-header-text>
      <%= @salon.store_name %>の口コミを投稿する</h2>
    </div>

<%#= ログインしているユーザーにのみ表示%>
    <% if worker_signed_in? %>
    <div class="form-group">
      <%= form_with model: [@salon, @comment],local: true do |f|%>
      <%= render 'shared/error_messages', model: f.object %>

      <div class="form-text-wrap ">
        <div class="form-text">
          <%= f.label :atmosphere , "雰囲気・環境・働きやすさ" %>
          <span class="required">必須</span>
        </div>
          <%=f.text_area :atmosphere, placeholder:"500文字以内で記入してください", class:"comments-text"%>
      </div>

      <div class="form-text-wrap ">
        <div class="form-text">
          <%= f.label :growth_potential  , "得られた技術、成長できるポイント" %>
          <span class="required">必須</span>
        </div>
          <%=f.text_area :growth_potential, placeholder:"500文字以内で記入してください", class:"comments-text"%>
      </div>

      <div class="form-text-wrap ">
        <div class="form-text">
          <%= f.label :gap , "入社前後のギャップ" %>
          <span class="required">必須</span>
        </div>
          <%= f.text_area :gap, placeholder:"500文字以内で記入してください", class:"comments-text"%>
      </div>

      <div class="form-text-wrap ">
        <div class="form-text">
          <%= f.label :treatment  , "福利厚生・給与など待遇面"%>
          <span class="required">必須</span>
        </div>
          <%= f.text_area :treatment , placeholder:"500文字以内で記入してください", class:"comments-text"%>
      </div>

      <div class="form-text-wrap ">
        <div class="form-text">
          <%= f.label :reason_for_retirement, "退職した、退職しようと考えている理由" %>
          <span class="required">必須</span>
        </div>
          <%= f.text_area :reason_for_retirement, placeholder:"500文字以内で記入してください", class:"comments-text"%>
      </div>

      <div class="login-btn ">
        <%= f.submit "保存する", class: "login-red-btn"%>
      </div>
      <% end %>
    </div>

<% else %>
  <strong><p>※※※ 口コミの投稿にはログインが必要です ※※※</p></strong>
  ▶︎<%= link_to 'ログイン', worker_session_path, class: "login" %>
  ▶︎<%= link_to '新規登録', new_worker_registration_path, class: "sign-up" %>
<% end %>
  </div>
</div>

   