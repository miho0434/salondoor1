<%= @salon.store_name %>の口コミを投稿する

<%= form_with model: [@salon, @comment],local: true do |f|%>
<%#= render 'shared/error_messages', model: f.object %>

  <div class="field">
    <%= f.label :atmosphere , "雰囲気・環境・働きやすさ" %><br/>
    <%=f.text_field :atmosphere, placeholder:"例）" %>
  </div>

  <div class="field">
    <%= f.label :growth_potential  , "得られた技術、成長できるポイント" %><br/>
    <%=f.text_field :growth_potential, placeholder:"例）"%>
  </div>

  <div class="field">
    <%= f.label :gap , "入社前後のギャップ" %><br/>
    <%= f.text_field :gap, placeholder:"例）"%>
  </div>

  <div class="field">
    <%= f.label :treatment  , "福利厚生・給与など待遇面" %><br/>
    <%= f.text_field :treatment , placeholder:"例）"%>
  </div>

  <div class="field">
    <%= f.label :reason_for_retirement, "退職した、もしくは退職しようと考えている理由" %><br/>
    <%= f.text_field :reason_for_retirement, placeholder:"例）"%>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn %>
  </div>
<% end %>